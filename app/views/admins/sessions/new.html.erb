<div class="container m-0 p-0">
  <div class="row mb-3">
    <div class="col-2 offset-md-1">
      <h5 class="text-center m-0" style="background-color:whitesmoke;">管理者ログイン</h5>
    </div>
  </div>


  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="field mb-4">
    <div class="row">
      <div class="col-2 offset-md-3">
        <%= f.label "メールアドレス", class:"mb-0" %>
      </div>
      <div class="col-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"w-100"; %>
      </div>
    </div>
  </div>


  <div class="field mb-5">
    <div class="row">
      <div class="col-2 offset-md-3">
         <%= f.label "パスワード", class:"mb-0" %>
      </div>
      <div class="col-5">
         <%= f.password_field :password, autocomplete: "current-password", class:"w-100"; %>
      </div>
    </div>
  </div>

  <div class="actions">
    <div class="row">
      <div class="col-2 offset-6">
        <%= f.submit "ログイン", class:"btn btn-primary w-100"; %>
      </div>
    </div>
  </div>
  <% end %>
</div>