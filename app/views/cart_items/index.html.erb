<div class="container">
  <div class="row mb-5 align-items-center">
    <div class="col-4 offset-md-1">
      <h5 class="page-name text-center m-0" style="background-color:whitesmoke;">ショッピングカート</h5>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to "カートを空にする", destroy_all_cart_item_path, class: "btn btn-danger px-4 py-2 col-2" %>
    </div>
  </div>

  <div class="row justify-content-end">
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |t| %>
          <tr>
            <td><%= t.item.name %></td>
            <td><%= t.item.with_tax_price %></td>
            <td>
              <%= form_with model: @cart_item, local: true do |d| %>
              <%= d.hidden_field :item_id, value: t.item_id %>
              <%= d.select :amount, *[1..10], placeholder: "個数選択" %>
              <%= d.submit "変更", class: "btn btn-success px-1 py-2" %>
              <% end %>
            </td>
            <td><%= t.subtotal %></td>
            <% @cart_item_total += t.subtotal %>
            <td><%= link_to "削除する", cart_item_path, class: "btn btn-danger px-4 py-2", method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-primary col-2 px-4 py-2" %>
    <div class="d-flex justify-content-end col-10">
      <table class="table">
        <tr>
          <th>合計金額</th>
          <td class="text-lift"><%= @cart_item_total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success px-4 py-2" %>
  </div>
</div>