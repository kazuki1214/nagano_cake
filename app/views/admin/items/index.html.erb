<div>
  <div>
    <h2>商品一覧</h2>
    <button class="btn rounded-circle btn-outline-light shadow-sm">
    <%= link_to "＋", new_admin_item_path, class:"item-add text-secondary" %>
    </button>
  </div>
  <div>
    <table>
      <thead>
        <tr>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |t| %>
          <tr>
            <td><%= t.id %></td>
            <td>
              <%= link_to admin_item_path(t) do %>
              <%= t.name %>
              <% end %>
            </td>
            <td><%= t.price %></td>
            <td><%= t.genre.name %></td>
            <% if t.is_active == true %>
              <td>販売中</td>
            <% else %>
              <td>販売停止</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @items %>
</div>