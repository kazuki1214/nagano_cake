<div class="container m-0 p-0">
  <div class="row mb-3 align-items-center">
    <div class="col-3 offset-md-2">
      <h5 class="page-name text-center m-0" style="background-color:whitesmoke;">会員一覧</h5>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <table class="table">
        <thead>
          <tr>
            <th class="th">会員ID</th>
            <th class="th">氏名</th>
            <th class="th">メールアドレス</th>
            <th class="th">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |t| %>
          <tr>
            <td><%= t.id %></td>
            <td>
              <%= link_to admin_customer_path(t) do %>
                <%= t.last_name %><%= t.first_name %>
              <% end %>
            </td>
            <td><%= t.email %></td>
            <% if t.is_deleted == false %>
              <td>有効</td>
            <% else %>
              <td>退会</td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
   <%= paginate @customers %>
  </div>
</div>