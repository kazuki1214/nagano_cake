<div class="container m-0 p-0">
  <div class="row mb-3 align-items-center">
    <div class="col-md-3 offset-md-2">
      <h5 class="page-name text-center m-0" style="background-color:whitesmoke;">注文履歴一覧</h5>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="top-table table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |t| %>
            <tr>
              <td>
                <%= link_to admin_order_path(t) do %>
                  <%= t.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= t.name %></td>
              <td><%= t.order_details.all.sum(:amount) %></td>
              <td><%= t.order_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <div class="admin-page">
      <%= paginate @orders %>
    </div>
  </div>
</div>